{
  "type": "project",
  "require": {
    "php": "^7.4"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "scripts": {
    "phpunit": "./vendor/bin/phpunit",
    "tests": [
      "@phpunit"
    ],
    "paint": [
      "php ./public/index.php"
    ],
    "paint_trait": [
      "php ./public/index_trait_adapter.php"
    ],
    "app": [
      "@tests",
      "@paint"
    ]
  }
}